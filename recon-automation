# Flags options
install_tools=()
verbose=false

while getopts ":i:vh" opt; do
    case $opt in
        i)
            if [[ "$OPTARG" == "tools" ]]; then
                install_tools+=("$OPTARG")
            else
                echo "[!] Invalid argument. Use [-i tools]" >&2
                exit 1
            fi
            ;;
        v) verbose=true ;;
        h)
            echo "[!] Usage: $0 [-i tools] [-v verbose] [-h help]"
            exit 0
            ;;
        *) 
            echo "[!] Usage: $0 [-i tools] [-v verbose] [-h help]"
            exit 0
            ;;
    esac
done

shift $((OPTIND-1))

for task in "${install_tools[@]}"; do
    case "$task" in
        "tools")
            install_script_tools
            ;;

    esac
done

[[ $verbose == true ]] && set -x

