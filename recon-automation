# Flags options
install_tools=()
verbose=false

while getopts ":i:vh" opt; do
    case $opt in
        i)
            if [[ "$OPTARG" == "tools" ]]; then
                install_tools+=("$OPTARG")
            else
                echo "[!] Invalid argument. Use [-i tools]" >&2
                exit 1
            fi
            ;;
        v) verbose=true ;;
        h)
            echo "[!] Usage: $0 [-i tools] [-v verbose] [-h help]"
            exit 0
            ;;
        *) 
            echo "[!] Usage: $0 [-i tools] [-v verbose] [-h help]"
            exit 0
            ;;
    esac
done

shift $((OPTIND-1))

for task in "${install_tools[@]}"; do
    case "$task" in
        "tools")
            install_script_tools
            ;;
    esac
done

[[ $verbose == true ]] && set -x

#### ------ Phase 1: Asset Discovery ------ ####

## Logo here
## Legal disclaimer here
## Initial instructions here

# Define domain and output directory
define_variables || { echo "[DBG] define_variables failed."; exit 1; }

printf "\n####################################################################\n"
printf "##################### Phase 1: Asset Discovery #####################\n"
printf "####################################################################\n"

# Perform a check before running Subfinder
check_and_run subfinder "$subfinder_out" || { echo "[DBG] check_and_run failed. (could be related to Skipping option)"; exit 1; }

# Configure and run Subfinder
run_subfinder "$domain" "$output_dir" || { echo "[DBG] run_subfinder failed."; exit 1; }

# Configure and sun ShuffleDNS
run_shuffledns || { echo "[DBG] run_shuffledns failed."; exit 1; }

exit 0
# Configure and run AlterX
printf "\n[INF] This tool only creates permutations.\n"
# Configure and run DNSX

# Configure and run ShuffleDNS

